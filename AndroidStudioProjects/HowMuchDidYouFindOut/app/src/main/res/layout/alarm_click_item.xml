<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_click_cardview"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/alarm_click_image"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/email_sentence"
                android:background="@drawable/ic_image_view_example"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/alarm_click_image"
                android:id="@+id/alarm_linear"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/alarm_click_item_name"
                    android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                    android:paddingTop="40dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/alarm_click_item_price"
                    android:text="@string/main_search_price"
                    android:paddingStart="24dp"
                    android:paddingBottom="16dp"
                    android:textSize="@dimen/bottom_text_size"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_click_item_mall"
                android:text="asdasdasd"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>