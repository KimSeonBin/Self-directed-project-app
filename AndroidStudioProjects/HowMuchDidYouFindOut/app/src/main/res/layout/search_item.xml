<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/search_result_card_image"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/email_sentence"
        android:background="@drawable/ic_image_view_example"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/savedlist_inlist"
        android:layout_toRightOf="@+id/search_result_card_image">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_result_card_text"
            android:paddingTop="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp"
            android:text="@string/register_button"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_result_card_text_price"
            android:text="가격"
            android:padding="16dp"
            android:paddingStart="24dp"
            android:paddingBottom="24dp"
            android:textSize="@dimen/bottom_text_size"/>
    </LinearLayout>

</RelativeLayout>